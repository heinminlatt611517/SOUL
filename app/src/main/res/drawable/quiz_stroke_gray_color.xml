<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
           <stroke
               android:color="@color/color_gray_lighter"
               android:width="1dp"/>
            <corners
                android:radius="10dp"/>

        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <corners
                android:radius="10dp"/>
            <solid android:color="#fff" />
        </shape>
    </item>

</layer-list>