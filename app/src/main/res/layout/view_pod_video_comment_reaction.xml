<?xml version="1.0" encoding="utf-8"?>
<com.heinminlatt.soul_client_app.views.viewPods.VideoCommentReactionViewPod
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:layout_gravity="center"
    android:padding="@dimen/margin_medium"
    android:weightSum="4"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_reaction_favourite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_favourite_gray"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"/>

        <TextView
            android:id="@+id/tv_reaction_favourite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="200"
            android:layout_marginLeft="@dimen/margin_medium"
            android:textColor="@color/color_gray_light"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_reaction_woo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_woo"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"/>

        <TextView
            android:id="@+id/tv_reaction_woo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="200"
            android:layout_marginLeft="@dimen/margin_medium"
            android:textColor="@color/color_gray_light"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_reaction_laugh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_smile"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"/>

        <TextView
            android:id="@+id/tv_reaction_laugh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="200"
            android:layout_marginLeft="@dimen/margin_medium"
            android:textColor="@color/color_gray_light"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_reaction_sad"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_sad"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"/>

        <TextView
            android:id="@+id/tv_reaction_sad"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="200"
            android:layout_marginLeft="@dimen/margin_medium"
            android:textColor="@color/color_gray_light"
            />
    </LinearLayout>
</com.heinminlatt.soul_client_app.views.viewPods.VideoCommentReactionViewPod>