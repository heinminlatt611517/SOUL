<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:weightSum="4"
    android:background="@color/color_score_board_bg">

    <TextView
        android:id="@+id/tv_rank_no"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="1"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/color_gray_light1"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="left|center"
        >
        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:scaleType="centerInside"
            android:src="@drawable/user"
            android:background="@drawable/circle_bg_gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hein Min Latt"
            android:textSize="16sp"
            android:textColor="@color/color_gray_light1"
            android:layout_marginLeft="@dimen/margin_medium"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/iv_score"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_quiz"
            />
        <TextView
            android:id="@+id/tv_score_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80"
            android:textSize="16sp"
            android:textColor="@color/color_gray_light1"
            android:layout_marginLeft="@dimen/margin_medium"/>
    </LinearLayout>


</LinearLayout>