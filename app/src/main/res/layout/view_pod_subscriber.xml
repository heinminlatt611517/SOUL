<?xml version="1.0" encoding="utf-8"?>
<com.heinminlatt.soul_client_app.views.viewPods.SubscriberViewPod
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingLeft="@dimen/margin_medium_2"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:scaleType="centerInside"
            android:background="@drawable/ic_sub_blue_bg"
            android:src="@drawable/ic_twitter"/>

        <TextView
            android:id="@+id/tv_sub1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25K"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_card_medium"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:textColor="@color/color_gray_light"
            android:text="@string/str_txt_subscriber"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:src="@drawable/ic_instagram"
            android:background="@drawable/ic_sub_pink_bg"/>

        <TextView
            android:id="@+id/tv_sub2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25K"
            android:layout_marginLeft="@dimen/margin_card_medium"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:textColor="@color/color_gray_light"
            android:text="@string/str_txt_subscriber"/>

    </LinearLayout>



</com.heinminlatt.soul_client_app.views.viewPods.SubscriberViewPod>